<div class="container">
  <h1>主軸ポイント一覧</h1>
  <%= link_to 'キーポイント作成', new_key_point_path %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @key_points.each do |key_point| %>
        <tr>
          <td><%= key_point.title %></td>
          <td><%= key_point.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
