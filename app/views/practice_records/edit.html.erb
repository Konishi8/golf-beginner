<h1 class="text-center my-4">練習記録編集</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for @practice_record, html: { class: 'form-horizontal' } do |f| %>

        <div class="form-group row">
          <%= f.label :date, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <div class="date-select-inline">
              <%= f.date_select :date, { use_month_numbers: true }, class: 'form-control-inline' %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :goal, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.text_field :goal, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :comment, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10">
            <%= f.text_area :comment, rows: 5, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10 offset-sm-2">
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

